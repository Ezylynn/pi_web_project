                <li class = "account" id = "account">
                    <a href="/api/v1/sign-in" class = "account-link" id = "account-link"><span class="material-symbols-outlined account-logo underline-text-small" id = "account-logo">account_circle</span></a>
                    <ul class = "account-menu" id = "account-menu">
                        <li><a href="/api/v1/sign-in" class = "underline-text-small">Sign In</a></li>
                        <li><a href="/api/v1/register" class = "underline-text-small">Register</a></li>
                    </ul>
                </li>

            </ul>

        </nav>



    </header>

    <main class="bg layer">


        
        
        <section class="container">
            <form  action="/api/v1/sign-in" method = "POST">
        
                <p class="title_1">Login</p>
        
                <div>
                        <input type="text" class="name" name="username"  placeholder="Username" required>
                </div>
        
               
        
                <div>
                    <label class="password">
                
                        <input type="password" class="pass" name="password" placeholder="Password" required>
                    </label>
                </div>

                <p class="login_prompt">Login as:</p>
        
                <div class="radio-container">
    
                    <label class="student" for="student">
                        <input type="radio" id="student" name="role" value="student" required>
                        <span>Student</span>
                    </label>
        
                    <label class="teacher" for="teacher">
                        <input type="radio" id="teacher" name="role" value = "teacher" required>
                        <span>Teacher</span>
                    </label>
                
                </div>

                <div class="buttons">
                    <button class="reset" type="reset">Reset</button>
                    <button class="submit" type="submit">Submit</button>
                </div>

                <p class="not_user">Don't have an account? <a href="/api/v1/register">Sign up here</a></p> 
                <!-- add api register  -->
            


        
        
        
        
            </form>
        
        
        </section>
        





    </main>






